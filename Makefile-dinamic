all: encoder decoder

encoder: encoder.o libmin.so
	gcc -std=c99 -o encoder encoder.o -L. -lmin -Wl,-rpath,.

decoder: decoder.o libmin.so
	gcc -std=c99 -o  decoder decoder.o -L. -lmin -Wl,-rpath,.
	
encoder.o: encoder.c
	gcc -c -std=c99 encoder.c

decoder.o: decoder.c
	gcc -c -std=c99 decoder.c
	
libmin.so: lineliber.o cip.o
	gcc -shared -o  libmin.so lineliber.o cip.o
	
lineliber.o: lineliber.c
	gcc -c -fPIC -std=c99 lineliber.c 
	
cip.o: cip.c
	gcc -c -fPIC -std=c99 cip.c

clean:
	rm -rf *.o *.so encoder decoder